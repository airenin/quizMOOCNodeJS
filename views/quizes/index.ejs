<form method="get" action="/quizes">
<label for="search" class="rem">Texto a buscar</label>
<input type="text" id="search" name="search" value=""/><br/>
<button type="submit">Buscar</button>
</form>

<table>
<%var i; for (i=0; i < quizes.length; i++) {%>
  <tr>
    <td><a href="quizes/<%=quizes[i].id%>"><%=quizes[i].pregunta%></a></td>
    <td><a href="quizes/<%=quizes[i].id%>/edit"><button>Editar</button></a></td>
    <td>
      <form method="post" action="quizes/<%=quizes[i].id%>?_method=delete">
        <button type="submit" onClick="return confirm('Confirme si desea borrar <%=quizes[i].pregunta%>')">Borrar</button>
      </form>
    </td>
  </tr>
<%}%>
</table>
<a href="/quizes/new">Crear pregunta</a>
